<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sss"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt1"
        android:textSize="28sp"
        android:layout_margin="10dp"
        android:id="@+id/txt_1"/>
    <EditText
        android:layout_width="wrap_content"
        android:inputType="textCapSentences"
        android:layout_height="wrap_content"
        android:hint="@string/edt_1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txt_1"
        android:id="@+id/ed1"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt2"
        android:layout_below="@id/txt_1"
        android:textSize="28sp"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/txt_2"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edt_2"
        android:inputType="number"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/txt_2"
        android:layout_below="@id/txt_1"
        android:id="@+id/ed2"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt3"
        android:layout_below="@id/txt_2"
        android:textSize="28sp"
        android:layout_margin="10dp"
        android:id="@+id/txt_3"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edt_3"
        android:layout_toRightOf="@id/txt_3"
        android:layout_below="@id/txt_2"
        android:id="@+id/ed3"
        android:inputType="number"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt4"
        android:layout_below="@id/txt_3"
        android:textSize="28sp"
        android:layout_margin="10dp"
        android:id="@+id/txt_4"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edt_4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_4"
        android:layout_below="@id/txt_3"
        android:inputType="number"
        android:id="@+id/ed4"
        android:textSize="24sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edt_5"
        android:layout_toRightOf="@id/ed4"
        android:layout_below="@id/txt_3"
        android:id="@+id/ed5"
        android:layout_marginLeft="10dp"
        android:inputType="number"
        android:textSize="24sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/bttext"
        android:background="#000000"
        android:id="@+id/btn_1"
        android:onClick="second"
        android:textColor="#ffffff"
        android:layout_below="@id/txt_4"/>
</RelativeLayout>